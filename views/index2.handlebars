
<div class="row">
{{#each this}}
<div class="col-3" style="padding:1vw">
<div class="card">
  <img src={{itunes.image}} class="card-img-top" alt="itunes cover img">
  <div class="card-body" style="height: 40vh">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text" style="max-height: 50%;overflow:scroll">{{content}}</p>
    <a href="#" class="btn btn-primary" style="position: absolute;bottom:3%">{{pubDate}}</a> 
    <audio controls>
  <source src="{{link}}" type="audio/mp3">
    </audio>
  </div>
</div>
</div>
{{/each}} 
</div>
