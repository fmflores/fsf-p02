<div class="container my-5">
    <div class="row">
        <div class="col">
        </div>
    </div>
    <div class="row">
        <div class="col">
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Podcast Name" aria-label="Podcast Name" id="podcastName">
                <div class="input-group-append">
                    <button class="btn btn-outline-success" type="button" id="addPodcast">Add</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
{{#each parsedFeed}}
<div class="col-3" style="padding:1vw">
<div class="card">
  <img src={{itunes.image}} class="card-img-top" alt="itunes cover img">
  <div class="card-body" style="height: 40vh">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text" style="max-height: 50%;overflow:scroll">{{contentSnippet}}</p>
    <a href="{{link}}" target="_blank" class="btn btn-primary" style="position: absolute;bottom:3%">{{pubDate}}</a> 
  </div>
</div>
</div>
{{/each}} 
</div>

</div>
